<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/logo"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:layout_below="@id/logo"
        android:layout_marginTop="100sp"
        android:layout_marginHorizontal="50sp"
        android:backgroundTint="@color/colorAccent"
        android:inputType="textPersonName"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorTextHint"
        android:hint="@string/hint_user_field" />

    <TextView
        android:id="@+id/disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_field"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginHorizontal="50sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:textColor="@color/colorTextHint"
        android:textSize="12sp" />

    <Button
        android:id="@+id/main_button"
        android:fontFamily="@font/montserrat_bold"
        android:layout_below="@id/disclaimer"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="130sp"
        android:backgroundTint="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_button" />

    <TextView
        android:id="@+id/result_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_button"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="50sp"
        android:textAlignment="center"
        android:textColor="@color/colorTextHint"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/result_info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_info"
        android:fontFamily="@font/montserrat_bold"
        android:layout_marginTop="10sp"
        android:textAlignment="center"
        android:textColor="@color/colorTextHint"
        android:textSize="25sp" />
</RelativeLayout>